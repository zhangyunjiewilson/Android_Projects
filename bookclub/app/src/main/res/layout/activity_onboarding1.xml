<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.Onboarding1Activity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="457dp"
            android:layout_height="298dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/onboard1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/circle_orange" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/circle_gray" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle_gray" />
        </LinearLayout>

        <TextView
            android:id="@+id/title_onboarding1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="Welcome to Book Clubber"
            android:textAlignment="center"
            android:textColor="#43C1E9"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/description_onboarding1"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Instantly connect with others through book clubs."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>