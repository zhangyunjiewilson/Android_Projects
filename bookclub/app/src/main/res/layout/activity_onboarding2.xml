<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.Onboarding2Activity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:layout_width="346dp"
            android:layout_height="250dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/onboard2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle_gray"
                android:layout_marginRight="15dp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle_orange"
                android:layout_marginRight="15dp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle_gray" />
        </LinearLayout>

        <TextView
            android:id="@+id/title_onboarding2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Create your own Book Clubs"
            android:textAlignment="center"
            android:textColor="#43C1E9"
            android:textSize="26sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/description_onboarding2"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Don’t see a book club you’d like to join? Make your own."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/description_pt2_onboarding2"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="The details are up to you: you can determine what to read, when to meet, and what to talk about."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />



    </LinearLayout>

</android.support.constraint.ConstraintLayout>