<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.Onboarding3Activity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:srcCompat="@drawable/onboard3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle_gray"
                android:layout_marginRight="15dp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle_gray"
                android:layout_marginRight="15dp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle_orange"
                android:layout_marginRight="15dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/title_onboarding3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="Explore Other Book Clubs"
            android:textAlignment="center"
            android:textColor="#43C1E9"
            android:textSize="26sp"
            android:layout_marginBottom="10dp"/>


        <TextView
            android:id="@+id/description_onboarding3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Our smart feed will recommend book clubs to join based on your interests."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/get_started_onboarding3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="GET STARTED"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/blue_button_bright"
            android:textColor="#ffffff"
            android:textSize="20sp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>